let defaults = ../../defaults.lisp-format

let Step = defaults.Step

let Style = defaults.Style

let AlignStyle = defaults.AlignStyle

in  defaults.LispFormatConfig::{
    , indentWidth = +2
    , inlineMaxWidth = +80
    , defaultStyle = Style.Newline
    , defaultAlign = AlignStyle.Normal
    , preserveBlankLines = False
    , specials =
      [ { atom = "strategy-inline"
        , style = Style.Strategy [ Step.TryInline, Step.InlineHead +1 ]
        }
      ]
    }
