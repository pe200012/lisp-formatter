let Style = < InlineHead : Integer | Bindings | Newline | TryInline >

let AlignStyle = < Normal | Align >

let AlignRule = { alignAtom : Text, alignStyle : AlignStyle }

let Special = { atom : Text, style : Style }

let LispFormatConfig =
      { Type =
          { indentWidth : Integer
          , inlineMaxWidth : Integer
          , defaultStyle : Style
          , defaultAlign : AlignStyle
          , specials : List Special
          , aligns : List AlignRule
          , preserveBlankLines : Bool
          }
      , default =
        { specials = [] : List Special
        , aligns = [] : List AlignRule
        , preserveBlankLines = True
        }
      }

in  LispFormatConfig::{
    , indentWidth = +2
    , inlineMaxWidth = +80
    , defaultStyle = Style.InlineHead +1
    , defaultAlign = AlignStyle.Align
    , preserveBlankLines = True
    , specials =
      [ { atom = "if", style = Style.InlineHead +1 }
      , { atom = "cond", style = Style.InlineHead +1 }
      , { atom = "define", style = Style.InlineHead +2 }
      , { atom = "define-function", style = Style.InlineHead +1 }
      , { atom = "fn", style = Style.InlineHead +2 }
      , { atom = "let", style = Style.Bindings }
      ]
    , aligns =
      [ { alignAtom = "fn", alignStyle = AlignStyle.Normal }
      , { alignAtom = "let", alignStyle = AlignStyle.Normal }
      , { alignAtom = "define-function", alignStyle = AlignStyle.Normal }
      ]
    }
